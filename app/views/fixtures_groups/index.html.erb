<div class="container">
  <h1>Welcome to Top 5 Fantasy Soccer</h1>


  <div class="row">
    <div class="col-sm-12 col-lg-6">
      <div class="container">
      <h3>This Weeks Selections:</h3>
        <% count = 1 %>
        <% @fixtures_group.fixtures.each do |fixture| %>
          <h4>Game: <%= count %></h4>
          <% count += 1 %>
          <h4 class="indent"><%= "#{fixture.home_team} hosts #{fixture.away_team}" %></h4>
        <% end %>
      </div>
    </div>

    <div class="col-sm-12 col-lg-4 col-lg-offset-2">
      <div class="jumbotron sidebar">
        <h3>Top 5 of the Top 5</h3>
        <h4>Premier League</h4>
        <table>
          <tr>
            <th class="sidebar-head">Place</th>
            <th class="sidebar-head">Team</th>
            <th class="sidebar-head">Points</th>
          </tr>
          <% @pl5.each do |team| %>
            <tr>
              <td class="table-item team"><%= team.position %></td>
              <td class="table-item team"><%= team.team_name %></td>
              <td class="table-item team"><%= team.points %></td>
            </tr>
          <% end %>
        </table>
        <br>
        <h4>La Liga</h4>
        <table>
          <tr>
            <th class="sidebar-head">Place</th>
            <th class="sidebar-head">Team</th>
            <th class="sidebar-head">Points</th>
          </tr>
          <% @ll5.each do |team| %>
