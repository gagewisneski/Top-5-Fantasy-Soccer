            </tr>
          <% end %>
        </table>
        <br>
        <h4>Serie A</h4>
        <table>
          <tr>
            <th class="sidebar-head">Place</th>
            <th class="sidebar-head">Team</th>
            <th class="sidebar-head">Points</th>
          </tr>
          <% @sa5.each do |team| %>
