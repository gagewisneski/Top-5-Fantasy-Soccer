<div class="container">
  <h1 class="title-center">Create a private or a public league</h1>
  <div class="row">
    <div class="col-md-4 col-md-offset-2 col-sm-5">
      <%= form_tag "/leagues", class:"intro-form", method: :post do %>
        <h3 class="text-center"> Create a public league </h3>
        <div class="form-group">
          <%= text_field_tag :name, nil, placeholder:"League Name", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= text_field_tag :description, nil, placeholder:"Description", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= text_field_tag :image, nil, placeholder:"Image URL", class:"form-control" %>
        </div>
        <div class="form-group text-center">
          <%= submit_tag "Create public league", class:"" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-4 col-sm-5">
      <%= form_tag "/leagues", class:"", method: :post do %>
        <h3 class="text-center"> Create a private league </h3>
        <div class="form-group">
          <%= text_field_tag :name, nil, placeholder:"League Name", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= text_field_tag :description, nil, placeholder:"Description", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= text_field_tag :image, nil, placeholder:"Image URL", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= text_field_tag :password, nil, placeholder:"Password", class:"form-control" %>
        </div>
        <div class="form-group text-center">
          <%= submit_tag "Create private league", class:"" %>
        </div>
      <% end %>
    </div>
  </div>
</div>