<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-7">
      <h1>Login to:</h1>
      <h2>Make your selections and see how you compare to your friends!</h4>
    </div> <!-- end col -->

    <div class="col-md-4 col-md-offset-2 col-sm-5">
      <%= form_tag "/login", class:"intro-form", method: :post do %>
        <h3 class="text-center"> Login </h3>
        <div class="form-group">
          <%= text_field_tag :username, nil, placeholder:"Username", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder:"Password", class:"form-control" %>
        </div>
        <div class="form-group text-center">
          <%= submit_tag "Login", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>