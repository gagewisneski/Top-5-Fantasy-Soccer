<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-7">
      <h1 class="h1 font-light text-white w-full">Join a private league</h1>
    </div>

    <div class="col-md-4 col-md-offset-2 col-sm-5">
      <%= form_tag "/users_leagues", class:"intro-form", method: :post do %>
        <h3 class="text-center">Enter the league name and password</h3>
        <div class="form-group">
          <%= text_field_tag :league_name, nil, placeholder:@league.name, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= text_field_tag :password, nil, placeholder:"Password", class:"form-control" %>
        </div>
        <div class="form-group text-center">
          <%= submit_tag "Join league!", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>